<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_edit_shuizhunxian_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollbars="none">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="0.5dp">

            <TableRow>

                <TextView
                    style="@style/EditShuizhunxian"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5dp"
                    android:text="编号：" />

                <TextView
                    android:id="@+id/tv_bianhao_edit_shuizhunxian_fragment"
                    style="@style/EditShuizhunxian"
                    android:layout_weight="2.5"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp" />
            </TableRow>

            <TableRow android:background="@color/material_cyan_50">

                <TextView
                    style="@style/EditShuizhunxian"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5dp"
                    android:text="路线类型：" />

                <FrameLayout
                    style="@style/EditShuizhunxian"
                    android:layout_weight="2.5"
                    android:padding="0.5dp">

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spinner_route_type_edit_shuizhunxian_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:ms_background_color="@color/material_cyan_50"
                        app:ms_dropdown_height="wrap_content"
                        app:ms_dropdown_max_height="350dp" />
                </FrameLayout>

            </TableRow>

            <TableRow>

                <TextView
                    style="@style/EditShuizhunxian"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5dp"
                    android:text="观测类型：" />


                <FrameLayout
                    style="@style/EditShuizhunxian"
                    android:layout_weight="2.5"
                    android:padding="0.5dp">

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spinner_observe_type_edit_shuizhunxian_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:ms_background_color="@color/white"
                        app:ms_dropdown_height="wrap_content"
                        app:ms_dropdown_max_height="350dp" />
                </FrameLayout>

            </TableRow>

            <TableRow android:background="@color/material_cyan_50">

                <TextView
                    style="@style/EditShuizhunxian"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5dp"
                    android:text="工点：" />

                <TextView
                    android:id="@+id/tv_gongdian_edit_shuizhunxian_fragment"
                    style="@style/EditShuizhunxian"
                    android:layout_weight="2.5"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp" />

            </TableRow>

            <TableRow>

                <TextView
                    style="@style/EditShuizhunxian"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5dp"
                    android:text="工作基点：" />

                <TextView
                    android:id="@+id/tv_jidian_edit_shuizhunxian_fragment"
                    style="@style/EditShuizhunxian"
                    android:layout_weight="2.5"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp" />

            </TableRow>

            <TableRow android:background="@color/material_cyan_50">

                <TextView
                    style="@style/EditShuizhunxian"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5dp"
                    android:text="测点：" />

                <TextView
                    android:id="@+id/tv_cedian_edit_shuizhunxian_fragment"
                    style="@style/EditShuizhunxian"
                    android:layout_weight="2.5"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp" />

            </TableRow>

            <TableRow>

                <TextView
                    style="@style/EditShuizhunxian"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5dp"
                    android:text="天气：" />

                <FrameLayout
                    style="@style/EditShuizhunxian"
                    android:layout_weight="2.5"
                    android:padding="0.5dp">

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spinner_weather_edit_shuizhunxian_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:ms_dropdown_height="wrap_content"
                        app:ms_dropdown_max_height="350dp" />
                </FrameLayout>

            </TableRow>

            <TableRow android:background="@color/material_cyan_50">

                <TextView
                    style="@style/EditShuizhunxian"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5dp"
                    android:text="司镜人员：" />

                <FrameLayout
                    style="@style/EditShuizhunxian"
                    android:layout_weight="2.5"
                    android:padding="0.5dp">

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spinner_staff_edit_shuizhunxian_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:ms_background_color="@color/material_cyan_50"
                        app:ms_dropdown_height="wrap_content"
                        app:ms_dropdown_max_height="350dp" />
                </FrameLayout>

            </TableRow>

            <TableRow>

                <TextView
                    style="@style/EditShuizhunxian"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5dp"
                    android:text="气压(hPa)：" />

                <FrameLayout
                    style="@style/EditShuizhunxian"
                    android:layout_weight="2.5"
                    android:background="@null">

                    <EditText
                        android:id="@+id/et_pressure_edit_shuizhunxian_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rect_bg_stroke_table"
                        android:inputType="numberDecimal"
                        android:singleLine="true" />
                </FrameLayout>

            </TableRow>

            <TableRow android:background="@color/material_cyan_50">

                <TextView
                    style="@style/EditShuizhunxian"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5dp"
                    android:text="温度(℃)：" />

                <FrameLayout
                    style="@style/EditShuizhunxian"
                    android:layout_weight="2.5"
                    android:background="@null">

                    <EditText
                        android:id="@+id/et_temperature_edit_shuizhunxian_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rect_bg_stroke_table"
                        android:inputType="numberDecimal"
                        android:singleLine="true" />
                </FrameLayout>

            </TableRow>

            <TableRow>

                <TextView
                    style="@style/EditShuizhunxian"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5dp"
                    android:text="观测日期：" />

                <TextView
                    android:id="@+id/tv_date_edit_shuizhunxian_fragment"
                    style="@style/EditShuizhunxian"
                    android:layout_weight="2.5"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp" />
            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </TableLayout>
    </ScrollView>
</LinearLayout>
